<body>
    <h1>Facture de la commande</h1>
    <p>Nom: {{ nom }} {{ prenom }}</p>
    <p>Email: {{ email }}</p>
    <p>Adresse:
        
        {% for item in adresse %}
            {{ item.adresseLibelle }} {{ item.adressePostal }} {{ item.adresseVille }}
        {% endfor %}
       
    </p>

    <h2>Produits Commandés</h2>
    <table border="1">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Prix Unitaire</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            {% for item in panier %}
                <tr>
                    <td>{{ item.produit.produitLibelle }}</td> 
                    <td>{{ item.quantite }}</td>  
                    <td>{{ item.produit.produitPrixHt | number_format(2, ',', ' ') }} €</td>  {# Prix unitaire #}
                    <td>{{ item.produit.produitPrixHt * item.quantite | number_format(2, ',', ' ') }} €</td>  Total pour ce produit
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <h3>Total: {{ total | number_format(2, ',', ' ') }} €</h3>
</body>
</html>
