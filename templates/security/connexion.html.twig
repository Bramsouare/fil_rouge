{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <div class="container mt-5">

        <h1 class="text-center my-5 text-white">Connexion</h1>

        <form action="{{ path('app_login') }}" method="post">

            <!-- Affiche les erreurs de validation sous forme de liste -->
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Bonjour vous êtes connecté : {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="row">

                <div class="col-md-6">

                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    
                </div>

                <div class="col-md-6">

                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>

                </div>

            </div><br><br>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
            <button class="btn btn-lg btn-light" type="submit">
                Connexion
            </button>

        </form>

        <div class="text-center mt-3">
            <a href="{{ path('app_inscription') }}" class="btn btn-link">Vous n’êtes pas encore membre ? Inscrivez-vous ici.</a>
        </div>

    </div>

{% endblock %}

