{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<div class="container">

    <h1 class="text-center my-5 text-white">Panier</h1>  <!-- Texte en blanc pour le titre -->

    <div class="cart-container">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col" class="text-white">Produit</th>
                    <th scope="col" class="text-white">Quantité</th>
                    <th scope="col" class="text-white">Prix</th>
                </tr>
            </thead>
            <tbody>
                <tr class="table-row">
                    <td class="text-white">Produit A</td>
                    <td class="text-white">2</td>
                    <td class="text-white">20 €</td>
                </tr>
                <tr class="table-row">
                    <td class="text-white">Produit B</td>
                    <td class="text-white">1</td>
                    <td class="text-white">15 €</td>
                </tr>
            </tbody>
        </table>

        <!-- Total et Bouton -->
        <div class="d-flex justify-content-between align-items-center">
            <div><strong class="text-white">Total :</strong> 35 €</div>
            <a href="{{ path('app_payement') }}" class="btn btn-light">Valider le panier</a>
        </div>

    </div>

</div>
{% endblock %}
