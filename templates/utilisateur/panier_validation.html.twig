{% extends 'base.html.twig' %}

{% block title %}Validation du panier{% endblock %}

{% block body %}

<div class="container mt-5">

    
    <h2>Vos informations</h2>
    <p><strong>Nom:</strong> {{ nom }}</p>
    <p><strong>Pr√©nom:</strong> {{ prenom }}</p>
    <p><strong>Email:</strong> {{ email }}</p>

    
    <h3>Entrez votre adresse</h3>

    {{ form_start(form) }}
        <div class="form-group my-4">
            {{ form_label(form.adresse_libelle) }}
            {{ form_widget(form.adresse_libelle, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.adresse_libelle) }}
        </div>

        <div class="form-group">
            {{ form_label(form.adresse_ville) }}
            {{ form_widget(form.adresse_ville, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.adresse_ville) }}
        </div>

        <div class="form-group my-4">
            {{ form_label(form.adresse_postal) }}
            {{ form_widget(form.adresse_postal, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.adresse_postal) }}
        </div>

        <div class="form-group">
            {{ form_label(form.adresse_type) }}
            {{ form_widget(form.adresse_type, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.adresse_type) }}
        </div>

        <div class="form-group my-4">
            {{ form_label(form.adresse_telephone) }}
            {{ form_widget(form.adresse_telephone, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.adresse_telephone) }}
        </div>

        <div class="form-group text-center mt-5">
            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-light'}}) }}
        </div>
    {{ form_end(form) }}

</div>

{% endblock %}
