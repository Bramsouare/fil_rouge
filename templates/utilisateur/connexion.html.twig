{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <div class="container mt-5">

        <h1 class="text-center my-5 text-white">Connexion</h1>

        {{ form_start(form) }}

            <!-- Affiche les erreurs de validation sous forme de liste -->
            {% if form_errors(form) %}

                <div class="alert alert-danger">
                    <ul>
                        {% for error in form_errors(form) %}

                            <li>{{ error }}</li>

                        {% endfor %}
                    </ul>
                </div>

            {% endif %}

            <div class="row">

                <div class="col-md-6">

                    <div class="form-group">

                        {{ form_label(form.utilisateur_mail, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.utilisateur_mail, {'attr': {'class': 'form-control', 'placeholder': 'Veuillez entrer votre email'}}) }}

                    </div>

                </div>

                <div class="col-md-6">

                    <div class="form-group">

                        {{ form_label(form.utilisateur_mdp, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.utilisateur_mdp, {'attr': {'class': 'form-control', 'placeholder': 'Veuillez entrer votre mot de passe'}}) }}

                    </div>

                </div>

            </div><br><br>

            {# <div class="text-center mt-3">
                <button type="submit" class="btn btn-light btn-lg">Se connecter</button>
            </div> #}

        {{ form_end(form) }}

        <div class="text-center mt-3">
            <a href="{{ path('app_inscription') }}" class="btn btn-link">Vous n’êtes pas encore membre ? Inscrivez-vous ici.</a>
        </div>

    </div>

{% endblock %}
